@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "/Views/Shared/_LayoutAnonymous.cshtml";
}
<div class="container">
    <div class="col-md-4 col-sm-6 ml-auto mr-auto">
        <section>
        <form id="forgotPasswordForm" asp-action="ForgotPassword" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div class="card card-login">
              <div class="card-header card-header-info text-center">
                  <img src="/images/ps-logo-white.png" class="img-fluid pl-5 pr-5" />
                  <h4 class="card-title">Forgot your password?</h4>
              </div>
              <div class="card-body ">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input placeholder="Enter your email address" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
              </div>
              <div class="card-footer justify-content-center">
                <a href="javascript:document.getElementById('forgotPasswordForm').submit();" class="btn btn-info btn-link btn-lg">Submit</a>
                <a href="~/Account/Login" class="btn btn-info btn-link btn-lg">Return to login page</a>
              </div>
            </div>
            </form>
        </section>
      </div>
</div>
                        
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
